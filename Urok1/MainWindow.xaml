<Window x:Class="Urok1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Urok1"
        mc:Ignorable="d"
        Title="Площадь прямоугольника" Height="350" Width="300">
    <DockPanel LastChildFill="True" VerticalAlignment="Center" Margin="10">
        <Label Content="Введите массу" DockPanel.Dock="Top"/>
        <TextBox x:Name="MassaText" DockPanel.Dock="Top"/>
        <Label Content="Введите скорость" DockPanel.Dock="Top"/>
        <TextBox x:Name="SpeedText" DockPanel.Dock="Top"/>
        <Label Content="Введите высоту" DockPanel.Dock="Top"/>
        <TextBox x:Name="HighText" DockPanel.Dock="Top"/>
        <Button Content="Кинетическая энергия" DockPanel.Dock="Top" Click="ButtonBase_OnClick"/>
        <Button Content="Потенциальная энергия" DockPanel.Dock="Top" Margin="0 10 0 10" Click="Button_Click"/>
        <TextBlock x:Name="Result" DockPanel.Dock="Bottom"/>
    </DockPanel>
</Window>
